---
// src/pages/about.astro
import Layout from '../layouts/layout.astro';
import { getSingleEntry } from '../contentstack-sdk/fetchContent';

const page = await getSingleEntry('page', { url: '/about' });

if (!page) {
  return Astro.redirect('/404');
}

const { title, body, seo_title, seo_description } = page;
---

<Layout 
  title={seo_title || title || 'Ã€ propos'}
  description={seo_description}
>
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-bold mb-6">{title}</h1>
    {body && <div class="prose" set:html={body} />}
  </main>
</Layout>